<!-- Loop over each object in the projects array -->
{{#each reviews as |review| }}
<div class="row mb-4 brew">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/review/{{review.id}}">{{review.username}}</a>
    </h2>
    <p>
      <span for="img" aria-label="smile">ðŸ˜‰</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount project.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{review.username}} on {{format_date project.date_created}}</p>
      <p>For {{review.brew_name}} in {{review.city.}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{review.description}}
    </p>
  </div>
</div>
{{/each}}